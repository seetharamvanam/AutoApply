#############################################
# AutoApply environment variables (example)
#
# Copy to .env and adjust values:
#   - Windows PowerShell: Copy-Item .env.example .env
#   - Bash: cp .env.example .env
#############################################

# Database
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT
# Use a strong secret in production (>= 256 bits of entropy).
JWT_SECRET=your-secret-key-change-in-production-min-256-bits

# Optional: Spring profile
SPRING_PROFILES_ACTIVE=dev

# Optional: Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional: Email (for password reset emails)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Optional: Frontend + CORS
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://*,moz-extension://*,edge-extension://*